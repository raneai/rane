{
  "name": "rane-monorepo",
  "private": true,
  "packageManager": "bun@1.1.33",
  "workspaces": ["packages/*", "apps/*", "scripts"],
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production turbo build --filter=\"./apps/*\" --force",
    "format": "biome format --fix .",
    "lint": "biome lint --fix .",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:push": "turbo db:push",
    "postinstall": "raneai-scripts prepare",
    "clean": "raneai-scripts clean",
    "build:docker": "turbo build:docker",
    "start:docker": "turbo start:docker",
    "update:deps": "bunx taze -wr && bun install",
    "db:studio": "turbo db:studio",
    "start": "turbo run start --filter=\"./apps/*\"",
    "test": "vitest",
    "changeset": "changeset",
    "coverage": "vitest --coverage",
    "dev:pkg": "NODE_ENV=development turbo dev --filter=\"./packages/*\"",
    "dev": "NODE_ENV=development turbo dev --filter=\"./apps/*\" --parallel"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.9",
    "@types/node": "^20.17.1",
    "@vitest/coverage-v8": "^2.1.3",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": "^18.19.0 || >=20.0.0"
  }
}
